<main id="site-main" class="site-main outer">
    <div class="highlight-feed">
        {{#if @blog.cover_image}}<div class="highlight-feed-cover" style="background-image: url({{@blog.cover_image}})"></div>{{/if}}

        <div class="inner">

            <div class="site-section">
                <div class="post-feed highlight-feed-primary">
                    {{#get "posts" filter="featured:true" include="authors,tags" limit="1"}}
                    {{#foreach posts}}
                        <article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">

                            {{#if og_image}}
                                <a class="post-card-image-link" href="{{url}}">
                                    <div class="post-card-image" style="background-image: url({{og_image}})"></div>
                                </a>
                            {{else}}
                                {{#if feature_image}}
                                    <a class="post-card-image-link" href="{{url}}">
                                        <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
                                    </a>
                                {{/if}}
                            {{/if}}

                            <div class="post-card-content">

                                <a class="post-card-content-link" href="{{url}}">
                                    <header class="post-card-header">
                                        {{#if primary_tag}}
                                            <span class="post-card-tags">{{primary_tag.name}}</span>
                                        {{/if}}
                                        <h2 class="post-card-title">{{title}}</h2>
                                    </header>
                                    <div class="post-card-excerpt">
                                        <p>{{excerpt words="33"}}</p>
                                    </div>
                                </a>

                                <footer class="post-card-meta">
                                    {{> "components/author-list"}}
                                    <span class="reading-time">{{reading_time}}</span>
                                </footer>

                            </div>

                        </article>
                    {{/foreach}}
                    {{/get}}
                    <aside>
                        {{#get "posts" filter="tag:crossdvlup" include="authors,tags" limit="2"}}
                        {{#foreach posts}}
                        <a class="highlight-feed-podcast highlight-feed-primary-widget" href="{{url}}" {{#if primary_tag.feature_image}}style="background-image: url({{primary_tag.feature_image}})"{{/if}}>
                            <div class="highlight-feed-podcast-content">
                                <header class="highlight-feed-podcast-header">
                                    <div class="highlight-feed-podcast-header-left">CrossDvlup</div>
                                    <div class="highlight-feed-podcast-header-right">
                                        <ul class="author-list">
                                        {{#foreach authors}}
                                            <li class="author-list-item">
                                                <div class="author-name-tooltip">
                                                    {{name}}
                                                </div>
                                                {{#if profile_image}}
                                                    <div href="{{url}}" class="static-avatar"><img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" /></div>
                                                {{else}}
                                                    <div href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</div>
                                                {{/if}}

                                                {{link}}
                                            </li>
                                        {{/foreach}}
                                        </ul>
                                    </div>
                                </header>
                                <div class="highlight-feed-podcast-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"></svg>
                                </div>
                                <h3 class="highlight-feed-podcast-title">{{title}}</h3>
                            </div>
                        </a>
                        {{/foreach}}
                        {{/get}}
                    </aside>
                </div>
                {{#get "posts" filter="featured:true" include="authors,tags" limit="4"}}
                <div class="post-feed highlight-feed-secondary">
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                </div>
                {{/get}}
            </div>

        </div>

    </div>

